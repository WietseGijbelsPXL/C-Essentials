<Window x:Class="Rekensommen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rekensommen"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <GroupBox Header="Opties" Grid.ColumnSpan="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <Label Content="Getal1" FontWeight="Bold"/>
                    <Label Content="Van:"/>
                    <TextBox x:Name="firstNumberMinTextBox" TextChanged="Range_TextChanged" KeyDown="Range_KeyDown"/>
                    <Label Content="Tot:"/>
                    <TextBox x:Name="firstNumberMaxTextBox" TextChanged="Range_TextChanged"/>
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <Label Content="Getal2" FontWeight="Bold"/>
                    <Label Content="Van:"/>
                    <TextBox x:Name="secondNumberMinTextBox" TextChanged="Range_TextChanged"/>
                    <Label Content="Tot:"/>
                    <TextBox x:Name="secondNumberMaxTextBox" TextChanged="Range_TextChanged"/>
                </StackPanel>
            </Grid>
        </GroupBox>
        <GroupBox Header="Bewerkingen" Grid.Column="2">
            <StackPanel>
                <CheckBox IsChecked="True" Content="Optellen" x:Name="addOperatorCheckBox"/>
                <CheckBox IsChecked="True" Content="Aftrekken" x:Name="subtractOperatorCheckBox"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Uitkomst" Grid.Column="3" Grid.ColumnSpan="2">
            <StackPanel>
                <Label Content="Negatieve getallen toegelaten?"/>
                <StackPanel Orientation="Horizontal">
                    <RadioButton Content="Ja" GroupName="negativeNumbers"/>
                    <RadioButton Content="Nee" GroupName="negativeNumbers" Name="disallowNegativeOutcomeRadioButton"/>
                </StackPanel>
                <Label Content="Maximum toepassen?"/>
                <StackPanel Orientation="Horizontal">
                    <RadioButton Content="Ja" GroupName="maximum" Name="applyMaximumRadioButton" Unchecked="applyMaximumRadioButton_Unchecked"  Checked="applyMaximumRadioButton_Checked"/>
                    <RadioButton Content="Nee" GroupName="maximum"/>
                    <Label Content="Maximum:"/>
                    <TextBox Text="100" Name="maximumResultTextBox"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
        <Label Grid.Row="1" Content="_" HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom" FontSize="100" Name="firstNumberLabel"/>
        <Label Grid.Row="1" Grid.Column="1" Content="+" HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom" FontSize="100" Name="operatorLabel"/>
        <Label Grid.Row="1" Grid.Column="2" Content="_" HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom" FontSize="100" Name="secondNumberLabel"/>
        <Label Grid.Row="1" Grid.Column="3" Content="=" HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom" FontSize="100" Name="equalsLabel" MouseDoubleClick="equalsLabel_MouseDoubleClick"/>
        <TextBox Grid.Row="1" Grid.Column="4" Text="??" HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom" FontSize="100" Name="resultTextBox" KeyDown="resultTextBox_KeyDown"/>
        <TextBlock Grid.Row="2" Grid.ColumnSpan="2" FontSize="15">
            <Underline><Bold>Instructies</Bold></Underline>
            <LineBreak/>
            - Dubbelklik =
            <LineBreak/>
            - Vul het antwoord in en druk op Enter
            <LineBreak/>
            - Verbeter je tijd!
        </TextBlock>
        <Button Grid.Row="2" Grid.Column="2" Margin="25" Name="showTimeButton" Click="showTimeButton_Click">
            <Image Source="/Images/clock.png" Stretch="Uniform"/>
        </Button>
        <Label Name="timerLabel" Grid.Row="2" Grid.Column="3" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
