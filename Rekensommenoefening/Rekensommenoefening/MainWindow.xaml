<Window x:Class="Rekensommenoefening.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rekensommenoefening"
        mc:Ignorable="d"
        Title="Rekensommen" Height="450" Width="800"
        Background="LightGray">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="178"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="133"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <GroupBox Header="Opties" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="7*"/>
                    <ColumnDefinition Width="32*"/>
                    <ColumnDefinition Width="39*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Margin="5,5,5,5" Grid.ColumnSpan="2" >
                    <Label Content="Getal1" FontWeight="ExtraBold"/>
                    <Label Content="Van:"/>
                    <TextBox x:Name="firstNumberMinTextBox" TextChanged="Range_TextChanged" KeyDown="Range_KeyDown"/>
                    <Label Content="Tot:"/>
                    <TextBox x:Name="firstNumberMaxTextBox" TextChanged="Range_TextChanged" KeyDown="Range_KeyDown"/>
                </StackPanel>
                <StackPanel Grid.Column="2" Margin="5,5,6,5">
                    <Label Content="Getal2" FontWeight="ExtraBold"/>
                    <Label Content="Van:"/>
                    <TextBox x:Name="secondNumberMinTextBox" TextChanged="Range_TextChanged" KeyDown="Range_KeyDown"/>
                    <Label Content="Tot:"/>
                    <TextBox x:Name="secondNumberMaxTextBox" TextChanged="Range_TextChanged" KeyDown="Range_KeyDown"/>
                </StackPanel>
            </Grid>
        </GroupBox>
        <GroupBox Header="Bewerking" Grid.Column="2" Margin="5">
            <StackPanel>
                <CheckBox x:Name="addOperatorCheckBox" Content="Optellen" Margin="5" IsChecked="True"/>
                <CheckBox x:Name="subtractOperatorCheckBox" Content="Aftrekken" Margin="5" IsChecked="True"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Uitkomst" Grid.Column="3" Grid.ColumnSpan="2" Margin="5">
            <StackPanel>
                <Label Content="Negatieve getallen toelaten?" Margin="5"/>
                <StackPanel Orientation="Horizontal">
                    <RadioButton GroupName="negativeNumbers" Content="Ja"  Margin="5"/>
                    <RadioButton GroupName="negativeNumbers" Content="Nee" x:Name="disallowNegativeRadioButton" Margin="5" IsChecked="True"/>
                </StackPanel>
                <Label Content="Maximum toepassen??" Margin="5"/>
                <StackPanel Orientation="Horizontal" >
                    <RadioButton GroupName="maxNumbers" Content="Ja" x:Name="applyMaximumRadioButton" Margin="5" Checked="applyMaximum_Checked" Unchecked="applyMaximum_Checked"/>
                    <RadioButton GroupName="maxNumbers" Content="Nee" x:Name="notApplyMaximumRadioButton" Margin="5" IsChecked="True"/>
                    <Label Content="Maximum:"/>
                    <TextBox x:Name="maximumResultTextBox" Margin="5" Width="30" IsEnabled="False" KeyDown="Range_KeyDown"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
        <Label x:Name="firstNumberLabel" Grid.Row="1" Grid.Column="0" Content="_" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="80"/>
        <Label x:Name="operatorLabel" Grid.Row="1" Grid.Column="1" Content="+" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="80"/>
        <Label x:Name="secondNumberLabel" Grid.Row="1" Grid.Column="2" Content="_" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="80"/>
        <Label x:Name="equalsLabel" Grid.Row="1" Grid.Column="3" Content="=" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="80" IsEnabled="False" MouseDoubleClick="equalsLabel_MouseDoubleClick"/>
        <TextBox Margin="5" x:Name="resultTextBox"  Grid.Row="1" Grid.Column="4" Text="??" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="80" KeyDown="resultTextBox_KeyDown"/>
        <TextBlock Foreground="white" FontSize="15" Margin="5" TextWrapping="Wrap" x:Name="infoLabel" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Text="Instructies                                                                
                   -dubbelklik =                                                                            
                   -vul het antwoord in en druk op Enter                             
                   -Verbeter je tijd!"/>
        <Button x:Name="showTimeButton" Grid.Row="2" Grid.Column="2" Margin="10" Background="White" Click="showTimeButton_Click">
            <Image Source="/images/clock.png"/>
        </Button>
        <Label x:Name="timerLabel" Grid.Column="3" Grid.Row="2" Grid.ColumnSpan="2" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Content="00:00.00" FontSize="50" Foreground="white"/>
    </Grid>
</Window>
