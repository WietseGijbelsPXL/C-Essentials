<Window x:Class="WPFDemo_4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFDemo_4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top" Name="TopMenu">
            <MenuItem Header="File">
                <MenuItem Header="Open">
                    <MenuItem Header="open file"></MenuItem>
                    <MenuItem Header="open project"></MenuItem>
                </MenuItem>
                <MenuItem Header="Save"></MenuItem>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Copy"></MenuItem>
                <Separator></Separator>
                <MenuItem Header="Paste"></MenuItem>
            </MenuItem>
        </Menu>
        <TabControl SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="MainWindom.xmal">
                <WrapPanel>
                    <Label Content="naam"/>
                    <TextBox/>
                </WrapPanel>
            </TabItem>
            <TabItem Header="MainWindow.xaml.cs">
                <CheckBox Content="isgeslaagd" Checked="CheckBox_Checked"/>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
