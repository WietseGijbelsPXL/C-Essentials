<Window x:Class="Login.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Login"
        mc:Ignorable="d"
        Title="Login" Height="250" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>
        <Label Content="Meld je aan" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="Arial Black" FontSize="20" FontWeight="Bold"/>
        <Label Content="Gebruikersnaam:" HorizontalAlignment="Left" Margin="104,52,0,0" VerticalAlignment="Top"/>
        <TextBox Name="userNameTextBox" HorizontalAlignment="Left" Margin="212,56,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" GotFocus="userNameTextBox_GotFocus"/>
        <Label Content="Wachtwoord:" HorizontalAlignment="Left" Margin="104,83,0,0" VerticalAlignment="Top"/>
        <PasswordBox Name="passwordPasswordBox" HorizontalAlignment="Left" Margin="212,87,0,0" VerticalAlignment="Top" Width="120" GotFocus="passwordPasswordBox_GotFocus"/>
        <Button Name="loginButton" Content="Login" HorizontalAlignment="Left" Margin="225,174,0,0" VerticalAlignment="Top" Click="loginButton_Click"/>
        <Button Name="cancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="293,174,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.541,-0.633" Click="cancelButton_Click"/>
        <TextBlock Name="errorTextBlock" HorizontalAlignment="Center" Margin="0,144,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="374"/>

    </Grid>
</Window>
