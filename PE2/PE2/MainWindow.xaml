<Window x:Class="PE2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PE2"
        mc:Ignorable="d"
        Title="Charging Station System" Height="600" Width="400">
    <Grid Margin="5">
        <StackPanel>
            <TextBlock Text="EV Charging Station" FontSize="26" Padding="5" Foreground="White" Background="MidnightBlue"/>
            <TextBlock Margin="0 5 0 5">
            <Bold>Klant</Bold>
            </TextBlock>
            <ComboBox Margin="0 5 0 5" Name="customerComboBox" SelectionChanged="customerComboBox_SelectionChanged"/>
            <TextBlock Margin="0 5 0 5">
            <Bold>Nummerplaat</Bold>
            </TextBlock>
            <ListBox Margin="0 5 0 5" x:Name="licensePlateListBox" SelectionChanged="licensePlateListBox_SelectionChanged" MinHeight="50"/>
            <TextBlock Margin="0 5 0 5">
                <Bold>Kilometerstand</Bold>
            </TextBlock>
            <TextBox Margin="0 5 0 5" IsEnabled="False" Name="mileageTextBox" TextChanged="mileageTextBox_TextChanged"/>
            <WrapPanel Margin="0 5 0 5">
                <RadioButton Checked="RadioButton_Checked" x:Name="defaultRadioButton" Content="50 kW"  />
                <RadioButton Checked="RadioButton_Checked" x:Name="fastRadioButton" Content="200 kW" Margin="100 0 0 0"/>
                <RadioButton Checked="RadioButton_Checked" x:Name="superRadioButton" Content="400 kW" Margin="100 0 0 0"/>
            </WrapPanel>
            <WrapPanel Margin="0 5 0 5">
                <Button x:Name="startButton" Content="Start" Width="80" IsEnabled="False" Click="startButton_Click" Margin="100 0 0 0"/>
                <Button x:Name="endButton" Content="Stop" Width="80" IsEnabled="False" Click="endButton_Click" Margin="25 0 0 0"/>
            </WrapPanel>
            <Image Margin="0 5 0 5" x:Name="chargingImage"  Source="/charging.png" Height="100" Visibility="Hidden"/>
            <TextBlock Margin="0 5 0 5" x:Name="chargeSessionsTextBlock" Height="100"/>
        </StackPanel>
    </Grid>
</Window>
